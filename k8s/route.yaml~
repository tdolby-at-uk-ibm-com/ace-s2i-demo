apiVersion: v1
kind: Service
metadata:
  labels:
    app: ace-s2i-demo
  name: ace-s2i-demo-service
spec:
  ports:
  - name: http
    port: 7800
    targetPort: 7800
  selector:
    app: ace-s2i-demo
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ace-s2i-demo-deployment
  labels:
    app: ace-s2i-demo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ace-s2i-demo
  template:
    metadata:
      labels:
        app: ace-s2i-demo
    spec:
      containers:
      - name: ace-s2i-demo
        image: image-registry.openshift-image-registry.svc:5000/default/ace-s2i-demo-runtime:0.1.0
        ports:
        - containerPort: 9080
---
apiVersion: v1
kind: Route
metadata:
  labels:
    app: ace-s2i
  name: ace-s2i-route
spec:
  port:
    targetPort: http
  to:
    kind: Service
    name: ace-s2i-demo-service
